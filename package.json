{
  "name": "LeanSnippet",
  "displayName": "Lean Snippet",
  "description": "ðŸŒˆ Generate useful snippets!",
  "version": "0.11.1",
  "icon": "assets/images/logo.png",
  "publisher": "IceyWu",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Snippets"
  ],
  "author": {
    "email": "3128006406@qq.com",
    "name": "IceyWu",
    "url": "https://github.com/IceyWu"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IceyWu/Lean-Snippet"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "leanSnippetExplorer",
          "title": "Lean Snippet",
          "icon": "./assets/icons/lean-snippet-simple.svg"
        }
      ]
    },
    "views": {
      "leanSnippetExplorer": [
        {
          "id": "leanSnippetView",
          "name": "Code Snippets",
          "icon": "$(code)",
          "when": "true"
        },
        {
          "id": "leanSnippetActions",
          "name": "Snippet Actions",
          "type": "webview",
          "icon": "$(tools)",
          "when": "true"
        }
      ]
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/snippets-js.code-snippets"
      },
      {
        "language": "typescript",
        "path": "./snippets/snippets-ts.code-snippets"
      },
      {
        "language": "vue",
        "path": "./snippets/snippets-vue.code-snippets"
      },
      {
        "language": "html",
        "path": "./snippets/snippets-html.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "extension.insertLogStatement",
        "title": "Insert Log Statement"
      },
      {
        "command": "extension.insertLogChoose",
        "title": "Insert Choose Content"
      },
      {
        "command": "extension.deleteAllLogStatements",
        "title": "Delete all console.log statements"
      },
      {
        "command": "extension.insertConsolePlus",
        "title": "consolePlus"
      },
      {
        "command": "leanSnippet.refreshSnippets",
        "title": "Refresh",
        "icon": "$(sync)"
      },
      {
        "command": "leanSnippet.insertSnippet",
        "title": "Insert Snippet",
        "icon": "$(play)"
      },
      {
        "command": "leanSnippet.openSnippetFile",
        "title": "Open Snippet File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "leanSnippet.previewSnippet",
        "title": "Preview Snippet",
        "icon": "$(eye)"
      },
      {
        "command": "leanSnippet.addSnippet",
        "title": "Add New Snippet",
        "icon": "$(plus)"
      },
      {
        "command": "leanSnippet.importSnippets",
        "title": "Import Snippets",
        "icon": "$(cloud-download)"
      },
      {
        "command": "leanSnippet.exportSnippets",
        "title": "Export Snippets",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "leanSnippet.deleteSnippet",
        "title": "Delete Snippet",
        "icon": "$(trash)"
      }
    ],
    "keybindings": [
      {
        "command": "extension.insertLogStatement",
        "key": "shift+ctrl+l",
        "mac": "shift+cmd+l",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.deleteAllLogStatements",
        "key": "shift+ctrl+d",
        "mac": "shift+cmd+d"
      },
      {
        "command": "extension.insertLogChoose",
        "key": "shift+ctrl+/",
        "mac": "shift+cmd+/",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.insertConsolePlus",
        "key": "shift+ctrl+j",
        "mac": "shift+cmd+j",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "leanSnippet.refreshSnippets",
          "when": "view == leanSnippetView",
          "group": "navigation"
        },
        {
          "command": "leanSnippet.addSnippet",
          "when": "view == leanSnippetView",
          "group": "navigation"
        },
        {
          "command": "leanSnippet.importSnippets",
          "when": "view == leanSnippetView",
          "group": "navigation"
        },
        {
          "command": "leanSnippet.exportSnippets",
          "when": "view == leanSnippetView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "leanSnippet.insertSnippet",
          "when": "view == leanSnippetView && viewItem == snippet",
          "group": "inline"
        },
        {
          "command": "leanSnippet.previewSnippet",
          "when": "view == leanSnippetView && viewItem == snippet",
          "group": "inline"
        },
        {
          "command": "leanSnippet.deleteSnippet",
          "when": "view == leanSnippetView && viewItem == snippet",
          "group": "snippet@1"
        },
        {
          "command": "leanSnippet.openSnippetFile",
          "when": "view == leanSnippetView && viewItem == snippetFile",
          "group": "inline"
        }
      ]
    }
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "publish": "vsce publish",
    "release": "pnpm run changelog && bumpp --commit --push --tag && pnpm run package && pnpm run publish",
    "changelog": "changelogen --release"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "bumpp": "^10.2.3",
    "changelogen": "^0.6.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  }
}
