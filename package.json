{
  "name": "LeanSnippet",
  "displayName": "Lean Snippet",
  "description": "ðŸŒˆ Generate useful snippets!",
  "version": "0.11.0",
  "icon": "assets/images/logo.png",
  "publisher": "IceyWu",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Snippets"
  ],
  "author": {
    "email": "3128006406@qq.com",
    "name": "IceyWu",
    "url": "https://github.com/IceyWu"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IceyWu/Lean-Snippet"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "leanSnippetExplorer",
          "title": "Lean Snippet",
          "icon": "$(code)"
        }
      ]
    },
    "views": {
      "leanSnippetExplorer": [
        {
          "id": "leanSnippetView",
          "name": "Code Snippets",
          "icon": "$(code)",
          "when": "true"
        }
      ]
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/snippets-js.code-snippets"
      },
      {
        "language": "typescript",
        "path": "./snippets/snippets-ts.code-snippets"
      },
      {
        "language": "vue",
        "path": "./snippets/snippets-vue.code-snippets"
      },
      {
        "language": "html",
        "path": "./snippets/snippets-html.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "extension.insertLogStatement",
        "title": "Insert Log Statement"
      },
      {
        "command": "extension.insertLogChoose",
        "title": "Insert Choose Content"
      },
      {
        "command": "extension.deleteAllLogStatements",
        "title": "Delete all console.log statements"
      },
      {
        "command": "extension.insertConsolePlus",
        "title": "consolePlus"
      },
      {
        "command": "leanSnippet.refreshSnippets",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "leanSnippet.insertSnippet",
        "title": "Insert Snippet",
        "icon": "$(add)"
      },
      {
        "command": "leanSnippet.openSnippetFile",
        "title": "Open Snippet File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "leanSnippet.previewSnippet",
        "title": "Preview Snippet",
        "icon": "$(eye)"
      }
    ],
    "keybindings": [
      {
        "command": "extension.insertLogStatement",
        "key": "shift+ctrl+l",
        "mac": "shift+cmd+l",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.deleteAllLogStatements",
        "key": "shift+ctrl+d",
        "mac": "shift+cmd+d"
      },
      {
        "command": "extension.insertLogChoose",
        "key": "shift+ctrl+/",
        "mac": "shift+cmd+/",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.insertConsolePlus",
        "key": "shift+ctrl+j",
        "mac": "shift+cmd+j",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "leanSnippet.refreshSnippets",
          "when": "view == leanSnippetView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "leanSnippet.insertSnippet",
          "when": "view == leanSnippetView && viewItem == snippet",
          "group": "inline"
        },
        {
          "command": "leanSnippet.previewSnippet",
          "when": "view == leanSnippetView && viewItem == snippet",
          "group": "inline"
        },
        {
          "command": "leanSnippet.openSnippetFile",
          "when": "view == leanSnippetView && viewItem == snippetFile",
          "group": "inline"
        }
      ]
    }
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "publish": "vsce publish",
    "release": "bumpp --commit --push --tag && npm run package && npm run publish",
    "changelog": "conventional-changelog -p custom-config -i CHANGELOG.md -s -r 0 -n ./changelog-option.cjs"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.16.1",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.0.0",
    "bumpp": "^10.1.0",
    "conventional-changelog": "^6.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-custom-config": "^0.3.1",
    "eslint": "^9.26.0",
    "typescript": "^5.5.4"
  }
}
